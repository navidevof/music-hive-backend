{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["*"]
    },
    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", ".vscode"],
  "ts-node": {
    "files": true
  }
}
